{
  "id": "blog_post",
  "label": "Blog Post",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "allow_indexing": {
        "type": "Boolean",
        "config": {
          "label": "Allow indexing",
          "placeholder_false": "Disallow",
          "placeholder_true": "Allow",
          "default_value": true
        }
      },
      "main_image": {
        "type": "Image",
        "config": {
          "label": "Main Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "post_title": {
        "type": "Text",
        "config": {
          "label": "Post Title",
          "placeholder": ""
        }
      },
      "post_author": {
        "type": "Text",
        "config": {
          "label": "Post Author",
          "placeholder": ""
        }
      },
      "publish_date": {
        "type": "Date",
        "config": {
          "label": "Publish Date",
          "placeholder": ""
        }
      },
      "post_description": {
        "type": "Text",
        "config": {
          "label": "Post Description",
          "placeholder": ""
        }
      },
      "categoty": {
        "type": "Link",
        "config": {
          "label": "category",
          "select": "document",
          "customtypes": ["category"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "post_title_slice": {
              "type": "SharedSlice"
            },
            "post_image_slice": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
